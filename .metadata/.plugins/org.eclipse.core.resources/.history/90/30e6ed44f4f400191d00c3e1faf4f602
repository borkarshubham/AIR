import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;


class Block
{
	int id,on;
	
	public Block(int i)
	{
		this.on = -1;
		this.id = i;
	}
	
	public int getOn()
	{
		return this.on;
	}
	
	public void setOn(int i)
	{
		this.on = i;
	}
}

public class demo 
{
	List<Block> curr;
	List<Block> goal;
	boolean hand;
	int n;
	
	public demo(int n)
	{
		curr = new ArrayList<>();
		goal = new ArrayList<>();
		hand = true;
		this.n = n;
	}
	
	public static void main(System[] args)
	{
		System.out.print("Enter the number of blocks :- ");
		Scanner sc =  new Scanner(System.in);
		int a = sc.nextInt();
		
		System.out.println();
		
		demo d = new demo(a);
		
		for(int i=0;i<a;i++)
		{
			System.out.println("Enter the block above which the block "+i+" resides in current state :-");
			a =sc.nextInt();
			
			if(a == i || a >= d.n)
			{
				System.out.println("Invalid Input\n");
				return;
			}
			
			Block B = new Block(i);
			B.setOn(a);
			d.curr.add(B);
			
			System.out.println("Enter the block above which the block "+i+" resides in goal state :-");
			a =sc.nextInt();
			
			if(a == i || a >= d.n)
			{
				System.out.println("Invalid Input\n");
				return;
			}
			
			Block B1 = new Block(i);
			B1.setOn(a);
			d.goal.add(B1);
		}
		
		d.satisfy();	
	}

	public void satisfy() 
	{
		
		
	}
}
